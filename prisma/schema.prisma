// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Space {
  id           String   @id @unique @default(cuid())
  version      Int      @default(0)
  lastModified DateTime @updatedAt
  user         User?
  Todo         Todo[]
}

model ClientGroup {
  id         String   @id @unique
  lastPullId Int?     @default(1)
  clients    Client[]
}

model Client {
  id             String      @id @unique
  lastMutationId Int         @default(0)
  version        Int
  clientGroupId  String
  clientGroup    ClientGroup @relation(fields: [clientGroupId], references: [id], onDelete: Cascade)
  lastModified   DateTime    @updatedAt
}

model User {
  id      String  @id @unique
  name    String?
  email   String  @unique
  image   String?
  spaceId String  @unique
  space   Space   @relation(fields: [spaceId], references: [id], onDelete: Cascade)
}

model Todo {
  id           String       @id @unique
  title        String
  description  String?
  completed    Boolean      @default(false)
  version      Int
  spaceId      String
  space        Space        @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  lastModified DateTime     @updatedAt
  isDeleted    Boolean      @default(false)
  GithubIssue  GithubIssue?
  Event        Event[]
}

model GithubIssue {
  id     String @id @unique
  todoId String @unique
  todo   Todo   @relation(fields: [todoId], references: [id], onDelete: Cascade)
  number Int
  owner  String
  repo   String

  @@unique([owner, repo, number])
  @@index([owner, repo, number], name: "owner_repo_number")
}

model Event {
  id        String       @id @unique @default(cuid())
  type      EventType
  todoId    String
  todo      Todo         @relation(fields: [todoId], references: [id])
  createdAt DateTime     @default(now())
  status    EventStatus?

  @@unique([todoId, type], name: "todo_id_type")
  @@index([todoId], name: "todo_id")
}

enum EventType {
  CREATE_ISSUE
  SYNC_ISSUE
}

enum EventStatus {
  SUCCESS
  FAILED
  PROCESSING
}
